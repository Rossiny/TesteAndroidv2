<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopLogo"
        android:contentDescription="@string/logo_bank"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/userEditText"
        style="@style/EditTextStyle"
        android:layout_marginStart="@dimen/marginDefault"
        android:layout_marginLeft="@dimen/marginDefault"
        android:layout_marginTop="@dimen/marginTopLogin"
        android:layout_marginEnd="@dimen/marginDefault"
        android:layout_marginRight="@dimen/marginDefault"
        android:layout_marginBottom="@dimen/marginDefault"
        android:hint="@string/user"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_image"
        tools:ignore="Autofill" />


    <EditText
        android:id="@+id/passwordEditText"
        style="@style/EditTextStyle"
        android:layout_marginStart="@dimen/marginDefault"
        android:layout_marginLeft="@dimen/marginDefault"
        android:layout_marginTop="@dimen/marginTopPassword"
        android:layout_marginEnd="@dimen/marginDefault"
        android:layout_marginRight="@dimen/marginDefault"
        android:layout_marginBottom="@dimen/marginDefault"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEditText"
        tools:ignore="Autofill" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/button_bg"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>